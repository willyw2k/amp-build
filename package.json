{
  "name": "amp-build",
  "version": "0.1.0",
  "description": "An opinionated Google Accelerated Mobile Pages site build.",
  "main": "index.html",
  "scripts": {
    "tailwind:compile": "tailwind build ./src/styles/tailwind.css -o ./src/styles/_styles.css",
    "tailwind:watch": "onchange '**/tailwind.*' -- npm run tailwind:compile",
    "livereload": "livereload ./src -p 35729 -x ./src/styles/tailwind.css",
    "serve:src": "http-server ./src -c-1 -p 8000 -a localhost -o",
    "serve:dist": "http-server ./dist -c-1 -p 8000 -a localhost -o",
    "replace:livereload": "rexreplace '<script id=\"livereload\">(.|\\n)*?</script>' '' 'dist/**/*.html'",
    "replace:stylelink": "rexreplace '<link id=\"tailwind\"(.*?)rel=\"stylesheet\">' '' 'dist/**/*.html'",
    "replace:purged": "cat ./src/styles/_purged.css | rexreplace '\\/\\* amp-build:css-placeholder \\*\\/' '_' 'dist/**/*.html' -R",
    "build:copy": "cpy '**/*' '!images/*' '!styles/*' '../dist' --cwd=src --parents",
    "build:purge": "cpy './src/styles/_styles.css' './src/styles' --rename='_purged.css' && purgecss --css src/styles/_purged.css --content 'src/**/*.html' --out src/styles",
    "build:htmlmin": "foreach -g 'dist/**/*.html' -x 'html-minifier --collapse-whitespace --remove-comments --minify-js true --process-scripts [\\\"application/ld+json\\\",\\\"application/json\\\"] --minify-css {\\\"level\\\":{\\\"1\\\":{\\\"all\\\":false\\,\\\"removeWhitespace\\\":true\\,\\\"specialComments\\\":0}}} #{path} > #{path}.tmp && rm #{path} && mv #{path}.tmp #{path}' -C",
    "build:imagemin": "imagemin src/images/* --out-dir=dist/images",
    "build:validate": "foreach -g 'dist/**/*.html' -x 'amphtml-validator #{path}'",
    "workbox:build-src": "workbox injectManifest workbox-config-dev.js",
    "workbox:build-dist": "workbox injectManifest workbox-config.js",
    "workbox:watch": "onchange './workbox-*.js' -- npm run workbox:build-src",
    "build": "npm-run-all -p build:copy build:purge -s replace:* -p build:htmlmin build:imagemin -s build:validate",
    "dev": "npm-run-all -s tailwind:compile workbox:build-src -p tailwind:watch workbox:watch livereload serve:src",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zerodevx/amp-build.git"
  },
  "keywords": [
    "amp-html",
    "pwa",
    "tooling",
    "boilerplate",
    "starter-kit"
  ],
  "author": "Jason Lee <jason@zerodevx.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zerodevx/amp-build/issues"
  },
  "homepage": "https://zerodevx.github.io/amp-build",
  "devDependencies": {
    "amphtml-validator": "^1.0.23",
    "cpy-cli": "^2.0.0",
    "foreach-cli": "^1.8.0",
    "html-minifier": "^3.5.20",
    "http-server": "^0.11.1",
    "imagemin-cli": "^3.0.0",
    "livereload": "^0.7.0",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.1.0",
    "purgecss": "^1.1.0",
    "rexreplace": "^4.0.1",
    "tailwindcss": "^0.6.6",
    "workbox-cli": "^3.6.2"
  }
}
