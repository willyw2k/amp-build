{
  "name": "amp-boilerplate",
  "version": "0.1.0",
  "description": "An opinionated Google Accelerated Mobile Pages site build.",
  "main": "index.html",
  "scripts": {
    "tailwind:init": "tailwind init",
    "tailwind:compile": "tailwind build ./src/styles/tailwind.css -o ./src/styles/_styles.css",
    "tailwind:watch": "onchange '**/tailwind.*' -- npm run tailwind:compile",
    "livereload": "live-reload --port 8001 ./src",
    "serve:src": "http-server ./src -p 8000 -c-1 -cors -o",
    "serve:dist": "http-server ./dist -p 8000 -c-1 -cors -o",
    "replace:livereload": "rexreplace '<script src=\"//localhost:8001\"></script>' '' 'dist/**/*.html'",
    "replace:stylelink": "rexreplace '<link(.*?)rel=\"stylesheet\">' '' 'dist/**/*.html'",
    "replace:purged": "cat ./src/styles/_purged.css | rexreplace '\\/\\* purgecss \\*\\/' '_' 'dist/**/*.html' -R",
    "build:copy": "cpy '**/*' '!images/*' '!styles/*' '../dist' --cwd=src --parents",
    "build:purge": "cpy './src/styles/_styles.css' './src/styles' --rename='_purged.css' && purgecss --css src/styles/_purged.css --content 'src/**/*.html' --out src/styles",
    "build:htmlmin": "foreach -g 'dist/**/*.html' -x 'html-minifier --collapse-whitespace --remove-comments --minify-css {\\\"level\\\":{\\\"1\\\":{\\\"all\\\":false\\,\\\"removeWhitespace\\\":true}}} #{path} > #{path}.tmp && rm #{path} && mv #{path}.tmp #{path}'",
    "build:imagemin": "imagemin src/images/* --out-dir=dist/images",
    "build:validate": "foreach -g 'dist/**/*.html' -x 'amphtml-validator #{path}'",
    "build": "npm-run-all build:copy build:purge build:imagemin replace:* build:htmlmin build:validate",
    "dev": "npm-run-all --parallel tailwind:watch livereload serve:src",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zerodevx/amp-boilerplate.git"
  },
  "keywords": [
    "amp-html",
    "tooling",
    "starter-kit"
  ],
  "author": "Jason Lee <jason@zerodevx.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zerodevx/amp-boilerplate/issues"
  },
  "homepage": "https://github.com/zerodevx/amp-boilerplate#readme",
  "devDependencies": {
    "amphtml-validator": "^1.0.23",
    "cpy-cli": "^2.0.0",
    "foreach-cli": "^1.8.0",
    "html-minifier": "^3.5.20",
    "http-server": "^0.11.1",
    "imagemin-cli": "^3.0.0",
    "live-reload": "^1.1.0",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.1.0",
    "purgecss": "^1.1.0",
    "rexreplace": "^4.0.1",
    "tailwindcss": "^0.6.6"
  }
}
